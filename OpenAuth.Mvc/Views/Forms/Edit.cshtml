@section header
{
     <link rel="stylesheet" href="/css/treetable.css" />
    <link rel="stylesheet" href="/js/dtree/dtree.css" />
    <link rel="stylesheet" href="/js/dtree/font/dtreefont.css" />
    <style>
        .layui-btn + .layui-btn {
            margin-left: inherit !important;
        }
    </style>
}


<form class="layui-form layui-form-pane" action="" id="formEdit">
    <input type="hidden" name="Id" v-model="tmp.Id" />
    <input type="hidden" name="Fields" id="Fields" value="0">

    <div class="layui-row">
        <div class="layui-tab layui-tab-brief" lay-filter="tab" style="margin: 0px">
            <ul class="layui-tab-title">
                <li class="layui-this">基本資訊</li>
                <li>表單設計</li>
            </ul>
            <div class="layui-tab-content" style="height: 100px;">
                <div class="layui-tab-item layui-show">
                    <div class="layui-form-item" pane>
                        <label class="layui-form-label">表單名稱</label>
                        <div class="layui-input-block">
                            <input type="text" name="Name" v-model="tmp.Name" required lay-verify="required"
                                   placeholder="表單名稱" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item" pane>
                        <label class="layui-form-label">關聯數據表名</label>
                        <div class="layui-input-block">
                            <input type="text" name="DbName" v-model="tmp.DbName" required 
                                   placeholder="關聯數據表名稱" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item" pane>
                        <label class="layui-form-label">排序碼</label>
                        <div class="layui-input-block">
                            <input type="text" name="SortCode" v-model="tmp.SortCode" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item" pane>
                        <label class="layui-form-label">備註</label>
                        <div class="layui-input-block">
                            <textarea  name="Description" v-model="tmp.Description"
                                   placeholder="備註" class="layui-textarea"></textarea>
                        </div>
                    </div>

                </div>
                <div class="layui-tab-item">
                    <div class="layui-row">
                        <blockquote class="layui-elem-quote">
                            提醒：單選框和覈取方塊，如：{|-選項-|}兩邊邊界是防止誤刪除控制元件，程式會把它們替換為空，請不要手動刪除！
                        </blockquote>
                    </div>
                    <div class="layui-row">
                        <div class="layui-col-xs2 layui-btn-container">
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('text');">文字框</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('textarea');">多行文字</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('select');">下拉菜單</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('radios');">單選框</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('checkboxs');">覈取方塊</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('macros');">宏控制元件</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('progressbar');">進度條</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('qrcode');">二維碼</button>
                            <button class="layui-btn layui-btn-primary layui-btn-fluid" onclick="leipiFormDesign.exec('listctrl');">列表控制元件</button>
                        </div>
                        <div class="layui-col-xs10">
                            <script id="myFormDesign" type="text/plain" style="width: 100%;">
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" lay-submit id="btnSubmit" lay-filter="formSubmit" />
</form>

<script type="text/javascript" charset="utf-8" src="/js/ueditor/ueditor.config.js?2023"></script>
<script type="text/javascript" charset="utf-8" src="/js/ueditor/ueditor.all.js?2023"> </script>
<script type="text/javascript" charset="utf-8" src="/js/ueditor/lang/zh-cn/zh-cn.js?2023"></script>
<script type="text/javascript" charset="utf-8" src="/js/ueditor/formdesign/leipi.formdesign.v4.js?2023"></script>

