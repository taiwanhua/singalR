@section header
{
    <link rel="stylesheet" href="/css/treetable.css" />
}
<blockquote class="layui-elem-quote news_search toolList" id="menus">
</blockquote>

<div class="layui-card">

    <table class="layui-table" id="mainList"
           lay-data="{height: 'full-80', page:true, id:'mainList'}"
           lay-filter="list" lay-size="sm">
    </table>

    <script type="text/html" id="ToStatus">
        {{# if(d.ToStatus == 1){ }}
        <span class="layui-badge">已讀</span>
        {{# } else{}}
        <span class="layui-badge layui-bg-green">未讀</span>
        {{# } }}
    </script>
    
    <script type="text/html" id="barList">
        <a class="layui-btn layui-btn-xs" lay-event="edit">標記已讀</a>
        <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">刪除</a>
    </script>

</div>

<script type="text/javascript" src="/layui/layui.js"></script>
<script type="text/javascript" src="/userJs/sysmessages.js"></script>


