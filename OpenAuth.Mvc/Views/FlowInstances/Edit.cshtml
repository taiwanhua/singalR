
@section header
{
     <link rel="stylesheet" href="/css/treetable.css" />
    <link rel="stylesheet" href="/js/dtree/dtree.css" />
    <link rel="stylesheet" href="/js/dtree/font/dtreefont.css" />
    <link href="/js/flow/GooFlow.css" rel="stylesheet" />
    <link href="/css/formpreview.css" rel="stylesheet" />
}

<div class="layui-form layui-form-pane" id="formEdit">

    <div class="layui-row">
        <div class="layui-tab layui-tab-brief" lay-filter="tab" style="margin: 0px">
            <ul class="layui-tab-title">
                <li class="layui-this">基本資訊</li>
                <li>選擇流程模板</li>
            </ul>

            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                        
                    <div class="layui-form-item">
                        <label class="layui-form-label">實例編號</label>
                        <div class="layui-input-block">
                            <input type="text" name="Code" v-model="tmp.Code" required lay-verify="required"
                                   placeholder="實例編號" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">標題</label>
                        <div class="layui-input-block">
                            <input type="text" name="CustomName" v-model="tmp.CustomName" required lay-verify="required"
                                   placeholder="自定義名稱" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item" pane>
                        <label class="layui-form-label">備註</label>
                        <div class="layui-input-block">
                            <textarea name="Description" v-model="tmp.Description"  placeholder="請輸入" class="layui-textarea"></textarea>
                        </div>
                    </div>
                </div>

                <div class="layui-tab-item layui-fluid">

                    <div class="layui-row">
                        <div class="layui-col-xs3">
                            <ul id="tree" class="dtree"
                                style="padding: 2px; border: 1px solid #ddd; overflow: auto;"></ul>
                        </div>
                        <div class="layui-col-xs9 layui-col-space10">
                            <div class="layui-row">
                                <fieldset class="layui-elem-field">
                                    <legend>申請內容</legend>
                                    <div class="layui-field-box">
                                        <form  class="layui-form ">
                                            <div id="frmPreview"></div>
                                            <input type="hidden" lay-submit id="btnSubmit" lay-filter="formSubmit" />
                                        </form>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="layui-row">
                                <fieldset class="layui-elem-field">
                                    <legend>流程預覽</legend>
                                    <div class="layui-field-box">
                                        <div id="flowPanel"></div>
                                    </div>
                                </fieldset>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

<script type="text/javascript" src="/js/vue2.6.10.js"></script>
<script type="text/javascript" src="/layui/layui.js"></script>
<script type="text/javascript" src="/userJs/flowInstanceEdit.js?v2.0.0"></script>
<style >
    .dtree{ width:99% !important}
</style>

