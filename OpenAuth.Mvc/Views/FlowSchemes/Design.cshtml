@section header
{
 <link rel="stylesheet" href="/css/treetable.css" />
    <link rel="stylesheet" href="/js/dtree/dtree.css" />
    <link rel="stylesheet" href="/js/dtree/font/dtreefont.css" />
<link href="/js/flow/GooFlow.css" rel="stylesheet" />
<link href="/css/formpreview.css" rel="stylesheet" />
}

<form class="layui-form layui-form-pane" action="" id="formEdit">
    <input type="hidden" name="Id" v-model="tmp.Id" />

    <div class="layui-row">
        <div class="layui-tab layui-tab-brief" lay-filter="tab" style="margin: 0px">
            <ul class="layui-tab-title">
                <li class="layui-this">基本資訊</li>
                <li>選擇表單</li>
                <li>流程設計</li>
            </ul>
            <div class="layui-tab-content">
                <div class="layui-tab-item layui-show">
                    <input type="hidden" id="FrmId" name="FrmId" v-model="tmp.FrmId" />
                    <div class="layui-form-item">
                        <label class="layui-form-label">流程編號</label>
                        <div class="layui-input-block">
                            <input type="text" name="SchemeCode" v-model="tmp.SchemeCode" required lay-verify="required"
                                placeholder="流程編號" autocomplete="off" class="layui-input">
                        </div>
                    </div>
                    <div class="layui-form-item">
                        <label class="layui-form-label">流程名稱</label>
                        <div class="layui-input-block">
                            <input type="text" name="SchemeName" v-model="tmp.SchemeName" required lay-verify="required"
                                placeholder="流程名稱" autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item">
                        <label class="layui-form-label">排序碼</label>
                        <div class="layui-input-block">
                            <input type="text" name="SortCode" v-model="tmp.SortCode" required lay-verify="required"
                                autocomplete="off" class="layui-input">
                        </div>
                    </div>

                    <div class="layui-form-item" pane>
                        <label class="layui-form-label">禁用</label>
                        <div class="layui-input-block">
                            <input type="checkbox" value="1" v-model="tmp.Disabled" name="Disabled" lay-skin="switch"
                                lay-text="是|否">
                        </div>
                    </div>
                    <div class="layui-form-item" pane>
                        <label class="layui-form-label">備註</label>
                        <div class="layui-input-block">
                            <textarea name="Description" v-model="tmp.Description" placeholder="請輸入"
                                class="layui-textarea"></textarea>
                        </div>
                    </div>
                </div>


                <div class="layui-tab-item layui-fluid">
                    <div class="layui-row">
                        <select v-model="tmp.FrmId" lay-filter='formChangeFilter'>
                            <option v-for="form in forms" :value="form.Id">{{form.Name}}</option>
                        </select>

                    </div>
                    <hr class="layui-bg-red">
                    <div class="layui-row">
                        <span v-html="frmPreview"></span>
                    </div>
                </div>

                <div class="layui-tab-item">
                    <div id="flowPanel" style=""></div>
                </div>

            </div>
        </div>
    </div>
        <input type="hidden" lay-submit id="btnSubmit" lay-filter="formSubmit" />
</form>

<script type="text/javascript" src="/js/vue2.6.10.js"></script>
<script type="text/javascript" src="/layui/layui.js"></script>
<script type="text/javascript" src="/userJs/flowSchemeDesign.js?v2.0.0"></script>